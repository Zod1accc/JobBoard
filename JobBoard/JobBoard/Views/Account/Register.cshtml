@model RegisterViewModel


<section class="section-hero overlay inner-page bg-image" style="background-image: url('../assets/images/hero_1.jpg');" id="home-section">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<h1 class="text-white font-weight-bold">Sign Up</h1>
				<div class="custom-breadcrumbs">
					<a asp-action="Index" asp-controller="Home">Home</a> <span class="mx-2 slash">/</span>
					<span class="text-white"><strong>Log In</strong></span>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="site-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 mb-5">
				<h2 class="mb-4">Sign Up To JobBoard</h2>
				<form asp-action="Register" class="p-4 border rounded">
					<div class="row form-group">
						<div class="col-md-6 mb-3 mb-md-0">
							<label class="text-black" asp-for="Fullname">Fullname</label>
							<input asp-for="Fullname" id="fname" class="form-control" placeholder="Fullname">
							<span asp-validation-for="Fullname" class="text-danger"></span>
						</div>
						<div class="col-md-6 mb-3 mb-md-0">
							<label class="text-black" asp-for="Username">Username</label>
							<input asp-for="Username" id="fname" class="form-control" placeholder="Username">
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>
						<div class="col-md-12 mb-3 mb-md-0">
							<label class="text-black" asp-for="Email">Email</label>
							<input asp-for="Email" id="fname" class="form-control" placeholder="Email address">
							<span asp-validation-for="Email" class="text-danger"></span>

						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-6 mb-3 mb-md-0">
							<label class="text-black" asp-for="Password">Password</label>
							<input asp-for="Password" id="fname" class="form-control" placeholder="Password">
							<span asp-validation-for="Password" class="text-danger"></span>

						</div>
						<div class="col-md-6 mb-3 mb-md-0">
							<label class="text-black" asp-for="ConfirmPassword">Re-Type Password</label>
							<input asp-for="ConfirmPassword" class="form-control" placeholder="Re-type Password">
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
					</div>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="row form-group">
						<div class="col-md-12">
							<input type="submit" value="Sign Up" class="btn px-4 btn-primary text-white">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
