@using System
@using JobBoard.Models;
@model JobEditViewModel

@{
	DateTime minDate = DateTime.Now;
	string minDateString = minDate.ToString("yyyy-MM-ddTHH:mm");
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('/assets/images/hero_1.jpg');" id="home-section">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<h1 class="text-white font-weight-bold">Edit A Job</h1>
				<div class="custom-breadcrumbs">
					<a href="#">Home</a> <span class="mx-2 slash">/</span>
					<a href="#">Job</a> <span class="mx-2 slash">/</span>
					<span class="text-white"><strong>Post a Job</strong></span>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="site-section">
	<div class="container">
		<div class="row align-items-center mb-5">
			<div class="col-lg-8 mb-4 mb-lg-0">
				<div class="d-flex align-items-center">
					<div>
						<h2>Post A Job</h2>
					</div>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="row">
					<div class="col-6">
						<a href="#" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Preview</a>
					</div>
					<div class="col-6">
						<a href="#" class="btn btn-block btn-primary btn-md">Save Job</a>
					</div>
				</div>
			</div>
		</div>
		<div class="row mb-5">
			<div class="col-lg-12">
				<form id="editJobForm" class="p-4 p-md-5 border rounded" method="post" asp-action="JobEdit" enctype="multipart/form-data">
					<h3 class="text-black mb-5 border-bottom pb-2">Job Details</h3>
					<div class="form-group">
						<label for="company-website-tw d-block">Upload Featured Image</label> <br>
						<label class="btn btn-primary btn-md btn-file">
							Browse File<input asp-for="ImageFile" hidden>
						</label>
						<span asp-validation-for="ImageFile" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Email">Email</label>
						<input asp-for="Email" class="form-control" placeholder="E-mail">
						<span asp-validation-for="Email" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label asp-for="JobTitle">Job Title</label>
						<input asp-for="JobTitle" class="form-control" placeholder="Title">
						<span asp-validation-for="JobTitle" class="text-danger"></span>

					</div>
					<div class="form-group">
						<label asp-for="Location">Location</label>
						<input asp-for="Location" class="form-control" placeholder="Location">
						<span asp-validation-for="Location" class="text-danger"></span>

					</div>

					<div class="row">
						<div class="form-group col-md-6">
							<label asp-for="JobTypeId">Job Type</label>
							<select class="selectpicker border rounded" asp-for="JobTypeId" asp-items="@(new SelectList(ViewBag.Types,"Id","Name"))" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Job Type">
							</select>
							<span asp-validation-for="JobTypeId" class="text-danger"></span>

						</div>
						<div class="form-group col-md-6">
							<label asp-for="GenderId">Genre</label>
							<select class="selectpicker border rounded" asp-for="GenderId" asp-items="@(new SelectList(ViewBag.Genres,"Id","GenderName"))" data-style="btn-black" data-width="100%" data-live-search="true" title="Select Job Type">
							</select>
							<span asp-validation-for="GenderId" class="text-danger"></span>

						</div>
					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label asp-for="Experience">Experience</label>
							<input asp-for="Experience" class="form-control" placeholder="Experience">
							<span asp-validation-for="Experience" class="text-danger"></span>

						</div>
						<div class="form-group col-md-6">
							<label asp-for="Salary">Salary</label>
							<input asp-for="Salary" class="form-control" placeholder="Salary">
							<span asp-validation-for="Salary" class="text-danger"></span>

						</div>

					</div>
					<div class="form-group">
						<label asp-for="JobDescription">Job Description</label>
						<textarea asp-for="JobDescription" class="form-control" id="editorId"></textarea>
						<span asp-validation-for="JobDescription" class="text-danger"></span>

					</div>
					<div class="row">
						<div class="form-group col-md-6">
							<label asp-for="Deadline">Deadline</label>
							<input asp-for="Deadline" class="form-control" min="@(minDateString)" />
							<span asp-validation-for="Deadline" class="text-danger"></span>
						</div>
						<div class="form-group col-md-6">
							<label asp-for="Vacancy">Vacancy</label>
							<input asp-for="Vacancy" class="form-control" placeholder="Vacancy">
							<span asp-validation-for="Vacancy" class="text-danger"></span>

						</div>
					</div>

					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				</form>
			</div>
		</div>
		<div class="row align-items-center mb-5">
			<div class="col-lg-4 ml-auto">
				<div class="row">
					<div class="col-6">
						<a href="#" class="btn btn-block btn-light btn-md"><span class="icon-open_in_new mr-2"></span>Preview</a>
					</div>
					<div class="col-6">
						<button type="submit" form="editJobForm" class="btn btn-block btn-primary btn-md">Save Job</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
